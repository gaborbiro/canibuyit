<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gb.canibuythat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.BudgetModifierListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BudgetModifierDetailActivity"
            android:label="@string/title_budgetmodifier_detail"
            android:parentActivityName=".ui.BudgetModifierListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.BudgetModifierListActivity" />
        </activity>

        <provider
            android:authorities="com.gb.canibuythat.authority.budget"
            android:name=".provider.BudgetModifierProvider" />
    </application>

</manifest>
