<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_toLeftOf="@id/statistics"
        tools:context=".BudgetModifierListActivity">

        <fragment
            android:id="@+id/budgetmodifier_list"
            android:name="com.gb.canibuythat.ui.BudgetListFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            tools:layout="@android:layout/list_content" />

        <FrameLayout
            android:id="@+id/budgetmodifier_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statistics_shadow_height"
        android:layout_alignBottom="@id/container"
        android:background="@drawable/shadow" />
</RelativeLayout>