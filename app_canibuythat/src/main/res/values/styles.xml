<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="Dialog">
        <item name="android:minWidth">@dimen/dialog_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogMessageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dialog_content_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2e3333</item>
    </style>

    <style name="DialogMessage" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#828585</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="DialogButtonHorizontal" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/dialog_button_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dialog_button_padding</item>
        <item name="android:paddingRight">@dimen/dialog_button_padding</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#00a396</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
</resources>
