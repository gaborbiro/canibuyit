<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2e3333</item>
    </style>

    <style name="DialogMessage" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#828585</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="cloud">
        <item name="android:button">@drawable/cloud_selector</item>
        <item name="android:buttonTint">@color/accent</item>
    </style>

    <style name="FormHeading" parent="TextAppearance.AppCompat.Subhead">

    </style>
</resources>
